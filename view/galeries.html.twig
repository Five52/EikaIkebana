{# view/galeries.html.twig #}

{% extends 'layout.html.twig' %}

{% block title %}
	Galeries - {{ parent() }}
{% endblock %}

{% block main %}
	<h2>Galeries</h2>
	<div id="galeries">
		<section>
			<blockquote>
				" Les lotus flétris<br/>
				L'étang semble misérable<br/>
				Sous l'averse d'hiver. "
				<footer>BUSON (1715 - 1783)</footer>
			</blockquote>
		</section>
		<section>
			{% for galerie in galeries if galerie.type == 'classique' %}
				<div><a href="{{ root }}galeries/{{ galerie.id }}">{{ galerie.nom }}</a></div>
			{% endfor %}
		</section>
		<section>
			{% for galerie in galeries if galerie.type == 'exposition' %}
				<div><a href="{{ root }}galeries/{{ galerie.id }}">{{ galerie.nom }}</a></div>
			{% endfor %}
		</section>
		<section>
			{% for galerie in galeries if galerie.type == 'stage' %}
				<div><a href="{{ root }}galeries/{{ galerie.id }}">{{ galerie.nom }}</a></div>
			{% endfor %}
		</section>
	</div>
{% endblock %}
